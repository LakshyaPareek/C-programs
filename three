half pyramid star pattern

#include<conio.h>
#include<stdio.h>
void main()
{
    int i,j,rows;
    printf("Enter of rows:");
    scanf("%d", &rows);
    for (i=1;i<=rows;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");    
    }     
} 

half pyramid number pattern

#include<stdio.h>
void main()
{
    int i,j,rows;
    printf("Enter of rows:");
    scanf("%d", &rows);
    for (i=1;i<=rows;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d",j);
        }
        printf("\n");    
    }     
} 

full pyramid 

#include<stdio.h>
#include<conio.h>
void main()
{
    int i,space,rows,k=0;
    printf("Enter no. of rows:");
    scanf("%d", &rows);
    for (i=1; i<=rows; i++)
    {
        k=0;
        for (space = 1; space <= rows-i; space++)
        {
            printf(" ");
        }
        while (k!=2*i-1)
        {
            printf("*");
            k++;
        }
        printf("\n");
    }
}
